generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model companies {
  id String  @id @default(uuid())
  company_name  String
  company_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
  
  // Relations
  offices offices[]
}

model offices{
  id String  @id @default(uuid())
  company_id String
  office_name  String
  office_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
  
  // Relations
  company companies @relation(fields: [company_id], references: [id])
  employees employees[]
}

model employees{
  id String  @id @default(uuid())
  office_id String 
  employee_code Int @unique
  employee_name  String
  employee_type String
  employee_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
  
  // Relations
  office offices @relation(fields: [office_id], references: [id])
  movements movements[]
}

model incidents {
  id String  @id @default(uuid())
  incident_code String @unique
  incident_name String
  incident_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
  
  // Relations
  movements movements[]
}

model movements {
  id String  @id @default(uuid())
  employee_code Int 
  incident_code String 
  incidence_date DateTime
  incidence_observation String
  incidence_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
  
  // Relations
  employee employees @relation(fields: [employee_code], references: [employee_code])
  incident incidents @relation(fields: [incident_code], references: [incident_code])
}

model users{
  id String  @id @default(uuid())
  company_id String
  office_id String 
  user_name String
  user_email String @unique
  user_password String
  user_status Int
  user_rol Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
}
