generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model companies {
  id String  @id @default(uuid())
  company_name  String
  company_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
}

model offices{
  id String  @id @default(uuid())
  company_id String
  office_name  String
  office_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
}

model employees{
  id String  @id @default(uuid())
  office_id String 
  employee_code Int
  employee_name  String
  employee_type String
  employee_rol Int
  employee_status Int
  password String
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
}

model incidents {
  id String  @id @default(uuid())
  incident_name String
  incident_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
}

model movements {
  id String  @id @default(uuid())
  employee_id String 
  incidence_id String 
  incidence_date DateTime
  incidence_observation String
  incidence_status Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt @db.Timestamp(6)
}
